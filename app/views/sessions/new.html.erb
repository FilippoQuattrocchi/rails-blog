<%= form_with url: login_path, scope: :user do |form| %>
  <div>
    <%= form.label :email %>
      <%= form.email_field :email, required: true %>
  </div>
  <div>
    <%= form.label :password %>
      <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.label :remember_me %>
      <%= form.check_box :remember_me %>
  </div>
  <%= form.submit "Sign In" %>
    <li
      class="block text-md px-4 py-2 rounded text-blue-700 ml-2 font-bold hover:text-white mt-4 hover:bg-blue-700 lg:mt-0">
      <%= link_to "Forgot my password" , new_password_path %>
    </li>
    <li
      class="block text-md px-4 py-2 rounded text-blue-700 ml-2 font-bold hover:text-white mt-4 hover:bg-blue-700 lg:mt-0">
      <%= link_to "Didn't receive confirmation instructions" , new_confirmation_path %>
    </li>
    <% end %>